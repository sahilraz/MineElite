<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loginScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    tools:context=".LoginActivity"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_card_white_rounded"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:gravity="center"
            android:animateLayoutChanges="true"
            android:layoutAnimation="@anim/layout_fade_in">

            <TextView
                android:text="@string/welcome_back"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/sign_in_msg"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/emailEditText"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hint_color"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/passwordEditText"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_bg"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@color/hint_color"
                android:layout_marginBottom="8dp" />

            <!-- âœ… Forgot Password TextView -->
            <TextView
                android:id="@+id/forgotPasswordText"
                android:text="@string/forgot_password"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <FrameLayout
                android:id="@+id/signInButtonWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/purple_500"
                    android:fontFamily="sans-serif-medium"
                    android:padding="12dp"
                    android:text="@string/sign_in"
                    android:textColor="@android:color/white" />

                <ProgressBar
                    android:id="@+id/signInProgress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:layout_marginTop="1dp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/goToRegisterText"
                android:text="@string/new_account"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
