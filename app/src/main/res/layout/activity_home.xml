<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNav"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:padding="16dp"
        android:scrollbars="none">
        <!-- Coin Count -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- Coin Count TextView on Left -->
                <TextView
                    android:id="@+id/coinText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="6dp"
                    android:padding="8dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    app:drawableStartCompat="@drawable/ic_coin" />

                <!-- Spacer to push close button to right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Close Button on Right -->
                <ImageButton
                    android:id="@+id/telegramButton"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/telegram"
                    android:src="@drawable/ic_telegram"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: "
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inactive"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Speed -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/statusText"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed: "
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/speedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0 C/min"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Streak -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/speedText"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Streak: "
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/streakText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 days"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Reward Claimed Text -->
            <TextView
                android:id="@+id/rewardClaimedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:alpha="0"
                android:background="@drawable/bg_reward_claimed"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="john@example.com claimed â‚¹1000!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationY="-20dp" />

            <!-- Timer Circle with Spacing -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/timer_circle"
                    android:gravity="center"
                    android:text="Loading..."
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!-- Hyperlink TextView -->
            <TextView
                android:id="@+id/hyperlinkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:autoLink="web"
                android:clickable="true"
                android:focusable="true"
                android:text="HOW TO START?"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Start Button -->
            <Button
                android:id="@+id/startButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_button"
                android:elevation="4dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <!-- Extend Button -->
            <Button
                android:id="@+id/extendButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_rounded_extend_button"
                android:elevation="4dp"
                android:enabled="false"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:text="@string/extend_time"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
