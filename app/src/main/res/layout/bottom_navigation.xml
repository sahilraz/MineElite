<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNav"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/black">

    <!-- Home Tab -->
    <LinearLayout
        android:id="@+id/navHome"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/iconHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/nav_active" />

            <TextView
                android:id="@+id/textHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:gravity="center"
                android:textColor="@color/nav_active"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Streak Tab -->
    <LinearLayout
        android:id="@+id/navStreak"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/iconStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏆"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/nav_inactive" />

            <TextView
                android:id="@+id/textStreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streak Reward"
                android:gravity="center"
                android:textColor="@color/nav_inactive"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Withdraw Tab -->
    <LinearLayout
        android:id="@+id/navWithdraw"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/iconWithdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💰"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/nav_inactive" />

            <TextView
                android:id="@+id/textWithdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdrawal"
                android:gravity="center"
                android:textColor="@color/nav_inactive"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Refer Tab -->
    <LinearLayout
        android:id="@+id/navRefer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/iconRefer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🧑‍🤝‍🧑"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/nav_inactive" />

            <TextView
                android:id="@+id/textRefer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refer &amp; Earn"
                android:gravity="center"
                android:textColor="@color/nav_inactive"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Profile Tab -->
    <LinearLayout
        android:id="@+id/navProfile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/iconProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👤"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/nav_inactive" />

            <TextView
                android:id="@+id/textProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:gravity="center"
                android:textColor="@color/nav_inactive"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
